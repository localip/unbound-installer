{
	"name": "installer",
	"productName": "installer",
	"version": "1.0.0",
	"description": "Unbound's desktop installer.",
	"main": ".webpack/main",
	"scripts": {
		"start": "electron-forge start",
		"package": "electron-forge package",
		"make": "electron-forge make",
		"publish": "electron-forge publish"
	},
	"author": "Mario <mariovparaschiv@gmail.com> (github.com/localip)",
	"license": "Unlicensed",
	"devDependencies": {
		"@babel/core": "^7.18.9",
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/plugin-proposal-object-rest-spread": "^7.18.9",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/preset-env": "^7.18.9",
		"@babel/preset-typescript": "^7.18.6",
		"@electron-forge/cli": "^6.0.0-beta.64",
		"@electron-forge/maker-deb": "^6.0.0-beta.64",
		"@electron-forge/maker-rpm": "^6.0.0-beta.64",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.64",
		"@electron-forge/maker-zip": "^6.0.0-beta.64",
		"@electron-forge/plugin-webpack": "^6.0.0-beta.64",
		"@rabbitholesyndrome/electron-forge-maker-portable": "^0.1.1",
		"babel-loader": "^8.2.5",
		"babel-preset-solid": "^1.4.8",
		"css-loader": "^6.7.1",
		"electron": "19.0.9",
		"fork-ts-checker-webpack-plugin": "^7.2.13",
		"sass": "^1.54.0",
		"sass-loader": "^13.0.2",
		"solid-js": "^1.4.8",
		"style-loader": "^3.3.1",
		"ts-loader": "^9.3.1",
		"typescript": "~4.5.4",
		"webpack": "^5.73.0"
	},
	"dependencies": {
		"electron-squirrel-startup": "^1.0.0",
		"tsconfig-paths-webpack-plugin": "^3.5.2"
	},
	"config": {
		"forge": {
			"packagerConfig": {},
			"makers": [
				{
					"name": "@rabbitholesyndrome/electron-forge-maker-portable",
					"platforms": [
						"win32"
					]
				},
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"name": "Unbound"
					}
				},
				{
					"name": "@electron-forge/maker-zip",
					"platforms": [
						"darwin"
					]
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {}
				},
				{
					"name": "@electron-forge/maker-rpm",
					"config": {}
				}
			],
			"plugins": [
				[
					"@electron-forge/plugin-webpack",
					{
						"mainConfig": "./webpack.main.config.js",
						"renderer": {
							"config": "./webpack.renderer.config.js",
							"entryPoints": [
								{
									"html": "./src/renderer/index.html",
									"js": "./src/renderer/index.tsx",
									"name": "main_window"
								}
							]
						}
					}
				]
			]
		}
	}
}